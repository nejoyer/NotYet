<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.outlook.notyetapp"
    android:installLocation="auto">

    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <!-- TODO... runtime permissions for 23+ https://blog.xamarin.com/requesting-runtime-permissions-in-android-marshmallow/ -->
    <!-- Actually, now I don't think i need permissions... I'm using the default DB location, but allow the system to move the whole app to card. -->
    <!-- This will include the db -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">

        <!--Provider comes from the flavor specific manifest-->

        <activity
            android:name="com.outlook.notyetapp.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.outlook.notyetapp.CreateActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.outlook.notyetapp.HabitActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.outlook.notyetapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outlook.notyetapp.MainActivity" />
        </activity>
        <activity
            android:name="com.outlook.notyetapp.ActivitySettingsActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.outlook.notyetapp.HabitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outlook.notyetapp.HabitActivity" />
        </activity>
        <activity
            android:name="com.outlook.notyetapp.SortActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.outlook.notyetapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outlook.notyetapp.MainActivity" />
        </activity>
        <activity
            android:name="com.outlook.notyetapp.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.outlook.notyetapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outlook.notyetapp.MainActivity" />
        </activity>
        <activity
            android:name="com.outlook.notyetapp.GraphActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.outlook.notyetapp.HabitActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outlook.notyetapp.HabitActivity" />
        </activity>
        <activity android:name="com.outlook.notyetapp.HelpActivity"
            android:label="@string/help_activity_title"
            android:parentActivityName="com.outlook.notyetapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outlook.notyetapp.MainActivity" />
        </activity>
        <activity
            android:name="com.outlook.notyetapp.AboutActivity"
            android:label="@string/about_activity_title"
            android:parentActivityName="com.outlook.notyetapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outlook.notyetapp.MainActivity" />
        </activity>
    </application>
</manifest>